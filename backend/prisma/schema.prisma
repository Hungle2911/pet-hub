datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Owner {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  bio      String?
  cats     Cat[]
  bookings Booking[]
}

model Sitter {
  id       Int      @id @default(autoincrement())
  username String   @unique
  email    String   @unique
  password String
  bio      String?
  bookings Booking[]
}

model Cat {
  id            Int      @id @default(autoincrement())
  name          String
  breed         String
  age           Int
  favoriteFoods String
  disposition   String
  ownerId       Int
  owner         Owner    @relation(fields: [ownerId], references: [id])
  bookings      Booking[]
}

model Booking {
  id        Int      @id @default(autoincrement())
  startDate DateTime
  endDate   DateTime
  catId     Int
  cat       Cat      @relation(fields: [catId], references: [id])
  ownerId   Int
  owner     Owner    @relation(fields: [ownerId], references: [id])
  sitterId  Int
  sitter    Sitter   @relation(fields: [sitterId], references: [id])
}